<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Newgame">
    <TextView
        android:id="@+id/aaaa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:textSize="35sp"
        android:textColor="#000"
        android:fontFamily="@font/jakartasans"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@color/red"
        android:id="@+id/bbbb"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:textSize="35sp"
        android:text="Beginner (8 x 8)"
        android:fontFamily="@font/jakartasans"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"

        android:id="@+id/cccc"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/bbbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="30sp"
        android:text="Intermediate (16 x 16)"
        android:fontFamily="@font/jakartasans"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:id="@+id/dddd"
        app:layout_constraintStart_toStartOf="@id/aaaa"
        app:layout_constraintEnd_toEndOf="@id/aaaa"
        app:layout_constraintTop_toBottomOf="@id/cccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textSize="30sp"
        android:text="Expert (24 x 24)"
        android:fontFamily="@font/jakartasans"
        />
    <TextView
        android:id="@+id/eeee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dddd"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/jakartasans"
        android:textColor="#000"
        />


    <EditText
        android:id="@id/ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eeee"
        android:hint="Mines"
        android:layout_marginStart="10sp"
        android:textSize="30sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/jakartasans"
        />
    <EditText
        android:layout_marginStart="10sp"
        android:id="@id/gggg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ffff"
        android:hint="Time"
        android:textSize="30sp"
        android:fontFamily="@font/jakartasans"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/roundbtn"
        android:id="@+id/hhhh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/jakartasans"
        android:text="Start Game"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/gggg" />


</androidx.constraintlayout.widget.ConstraintLayout>